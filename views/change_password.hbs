<!doctype html>
<html lang="en" dir="ltr">
<head>

    {{>header_assets}}

</head>
<body class="basic_pg separation_request_pg">
<section class="page">
    <div class="page-main">
        {{>header nav='dashboard'}}

        <!--Main content start here-->
        <section class="main_cont_sec">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success">
                            <strong>Success!</strong> Your account details have been updated successfully.
                        </div>
                    </div>
                </div>
                <div class="tbl_sec">
                    <div class="tbl_cell_1">
                        {{#if is_admin}}
                            {{>admin_sidebar_links menu_link="change_password" user_id=user_id}}
                        {{else}}
                            {{>sidebar_links menu_link="change_password"}}
                        {{/if}}
                    </div>
                    <div class="tbl_cell_2">
                        <div class="box">
                            <div class="tab-content">
                                <div id="changepassword" class="tab-pane fade in active show">
                                    <form class="row" id="jsChangepasswordForm">
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <p class="title">Change Password</p>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="form-input-wrap row">
                                                        <div class="col-lg-4">
                                                            <label class="form-label">Current Password</label>
                                                        </div>
                                                        <div class="col-lg-8">
                                                            <input type="password" class="form-control" id="password"
                                                                   placeholder="Current Password" name="password">
                                                            <span class="confidential">Do not use white spaces in password</span>
                                                        </div>
                                                    </div>
                                                    <div class="form-input-wrap row">
                                                        <div class="col-lg-4">
                                                            <label class="form-label">New Password</label>
                                                        </div>
                                                        <div class="col-lg-8">
                                                            <input type="password" class="form-control"
                                                                   id="password"
                                                                   placeholder="New password" name="password">
                                                        </div>
                                                    </div>
                                                    <div class="form-input-wrap row">
                                                        <div class="col-lg-4">
                                                            <label class="form-label">Confirm Password</label>
                                                        </div>
                                                        <div class="col-lg-8">
                                                            <input type="password" class="form-control"
                                                                   id="password"
                                                                   placeholder="New password" name="password">
                                                        </div>
                                                    </div>
                                                    <div class="form-input-wrap row">
                                                        <div class="col-lg-4">
                                                            <input type="hidden" class="js_user" value="{{data._id}}">
                                                        </div>
                                                        <div class="col-lg-8">
                                                            <button class="btn btn-primary">
                                                                <span class="fa fa-check"></span>
                                                                Update
                                                            </button>
                                                            <button class="btn btn-link">
                                                                <span class="fa fa-refresh"></span>
                                                                Reset
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--Main content ends here-->
    </div>
    {{>footer}}
</section>
{{>footer_assets}}
</body>
</html>