<!doctype html>
<html lang="en" dir="ltr">
<head>

    {{>header_assets}}

</head>
<body class="basic_pg separation_request_pg">
<section class="page">
    <div class="page-main">
        {{>header user=user nav='dashboard'}}

        <!--Main content start here-->
        <section class="main_cont_sec">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success">
                            <strong>Success!</strong> Your account details have been updated successfully.
                        </div>
                    </div>
                </div>
                <div class="tbl_sec">
                    <div class="tbl_cell_1">
                        {{#if is_admin}}
                            {{>admin_sidebar_links menu_link="family" user_id=user_id}}
                        {{else}}
                            {{>sidebar_links menu_link="family"}}
                        {{/if}}
                    </div>
                    <div class="tbl_cell_2">
                        <div class="box">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Family Details</h3>
                                    <button class="btn btn-primary ml-auto js_add_family">Add</button>
                                    <input type="hidden" class="js_user_id" value="{{data._id}}">
                                </div>
                                <div class="table-responsive">
                                    <table class="table card-table table-vcenter text-nowrap">
                                        <thead>
                                        <tr>
                                            <th class="w-1">No.</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Title</th>
                                            <th>Relationship</th>
                                            <th>Mobile Number</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody class="js_family_tbody">
                                        {{#each family}}
                                            {{>client/family_details_row}}
                                        {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--Main content ends here-->
    </div>
    {{>footer}}
</section>
{{>footer_assets select2=true}}
<script type="text/javascript">
    $(function () {
        FamilyPage.init();
    });
</script>
</body>
</html>